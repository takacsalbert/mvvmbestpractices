<local:BaseView x:Class="MVVMBestPractices.WPF.Views.MainView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:local="clr-namespace:MVVMBestPractices.WPF.Views"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                d:DesignHeight="450"
                d:DesignWidth="800"
                mc:Ignorable="d">
    <StackPanel>
        <TextBlock Style="{StaticResource TitleStyle}" Text="{Binding PageName}" />
        <Button Margin="0,12,0,0"
                HorizontalAlignment="Left"
                Command="{Binding GoToSecondPageCommand}"
                Content="Go to Second page" />
    </StackPanel>
</local:BaseView>
